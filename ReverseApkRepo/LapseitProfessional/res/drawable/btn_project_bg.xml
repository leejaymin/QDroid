<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <gradient android:startColor="#ffcccccc" android:endColor="#ffeeeeee" android:angle="90.0" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <gradient android:startColor="#ffefc83f" android:endColor="#ffefc83f" android:angle="90.0" android:centerColor="#ffd49a24" />
        </shape>
    </item>
</selector>
