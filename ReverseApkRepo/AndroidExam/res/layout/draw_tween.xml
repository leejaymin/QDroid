<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/linear" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Press Start Button to run animation!" />
    <Button android:layout_gravity="center_horizontal" android:id="@id/translate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Translate Animation" />
    <Button android:layout_gravity="center_horizontal" android:id="@id/rotate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rotate Animation" />
    <Button android:layout_gravity="center_horizontal" android:id="@id/scale" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Scale Animation" />
    <Button android:layout_gravity="center_horizontal" android:id="@id/alpha" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alpha Animation" />
    <Button android:layout_gravity="center_horizontal" android:id="@id/set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Set Animation" />
</LinearLayout>
