<?xml version="1.0" encoding="utf-8"?>
<manifest android:versionCode="9" android:versionName="0.2.3" package="chrisman.android.widget.signalstrength"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:label="@string/app_name" android:icon="@drawable/icon">
        <receiver android:label="Signal Strength Widget" android:name=".SignalStrengthWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.AIRPLANE_MODE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/signal_strength_widget" />
        </receiver>
        <service android:name=".SignalStrengthWidget$UpdateService" />
    </application>
    <uses-sdk android:minSdkVersion="4" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
</manifest>
