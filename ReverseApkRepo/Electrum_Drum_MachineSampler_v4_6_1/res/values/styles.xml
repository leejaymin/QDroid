<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mixerstyle" parent="@android:style/Theme.Dialog">
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#fff0f0f0</item>
    </style>
    <style name="MyDialogNoTitle" parent="@android:style/Theme.Dialog">
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff404040</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_custom</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="CustomButton" parent="@android:style/Theme.Dialog">
        <item name="android:buttonStyle">@style/MyButton</item>
    </style>
</resources>
