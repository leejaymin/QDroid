<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/custom_gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
    </style>
    <style name="ActionBarItem">
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">@dimen/actionbar_item_width</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:layout_marginLeft">1.0px</item>
    </style>
    <style name="ActionBarHomeItem" parent="@style/ActionBarItem">
        <item name="android:layout_marginLeft">0.0px</item>
        <item name="android:layout_marginRight">1.0px</item>
    </style>
    <style name="ActionBarHomeLogo">
        <item name="android:layout_marginLeft">0.0px</item>
        <item name="android:layout_marginRight">1.0px</item>
    </style>
    <style name="ActionBarProgressBar" parent="@android:style/Widget.ProgressBar.Small" />
    <style name="SplashScreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:padding">0.0dip</item>
    </style>
    <style name="stlTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="stlWhiteTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">28.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="stlGeneratingMosaicText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="stlMiniText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="stlHelpText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/help_text_color</item>
    </style>
    <style name="stlMosaicSize" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/theme_blue</item>
    </style>
    <style name="stlSelectedImages" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/theme_blue</item>
    </style>
    <style name="stlSubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_blue</item>
    </style>
    <style name="stlSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:background">#ff000000</item>
    </style>
    <style name="ActionBarViewer">
        <item name="android:background">#80000000</item>
    </style>
    <style name="ActionBarHelp">
        <item name="android:background">#fff0f0f0</item>
    </style>
    <style name="CheckableLinearLayoutStyle">
        <item name="selected_background">@android:color/black</item>
        <item name="normal_background">@android:color/white</item>
    </style>
    <style name="Theme.Main" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
