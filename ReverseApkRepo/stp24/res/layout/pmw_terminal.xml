<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/layoutMain" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:id="@id/logcat_table" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/button_script" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/button_script" android:drawableLeft="@drawable/restore" />
        <Button android:id="@id/button_cmd_history" android:layout_width="fill_parent" android:layout_height="fill_parent" android:drawableLeft="@drawable/history" android:layout_weight="1.0" />
        <CheckBox android:id="@id/checkbox_freeze" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="SU" />
        <Button android:id="@id/button_run" android:layout_width="fill_parent" android:layout_height="fill_parent" android:drawableLeft="@drawable/terminal" android:layout_weight="1.0" />
        <Button android:id="@id/button_save" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/button_savelog" android:drawableLeft="@drawable/backup" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:id="@id/terminal_cmd" android:layout_width="0.0dip" android:layout_height="fill_parent" android:layout_weight="1.0" android:inputType="textMultiLine|textNoSuggestions" />
    </LinearLayout>
    <ScrollView android:id="@id/scrolling_text" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0" android:isScrollContainer="true">
        <LinearLayout android:orientation="vertical" android:id="@id/output_table" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
