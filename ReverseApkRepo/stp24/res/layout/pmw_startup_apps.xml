<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/progress_indicator" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" />
        <TextView android:textSize="16.0dip" android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/text_loading_apps" />
    </LinearLayout>
    <ScrollView android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:isScrollContainer="true"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <TableLayout android:id="@id/apps_table" android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="1" android:shrinkColumns="1" />
    </ScrollView>
</LinearLayout>
