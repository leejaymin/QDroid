<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RadioButton android:gravity="center" android:id="@id/radio_monthly" android:padding="2.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/radio_monthly" android:layout_weight="1.0" />
        <RadioButton android:gravity="center" android:id="@id/radio_weekly" android:padding="2.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/radio_weekly" android:layout_weight="1.0" />
        <RadioButton android:gravity="center" android:id="@id/radio_daily" android:padding="2.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/radio_daily" android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:textAppearanceMedium" android:layout_gravity="center" android:id="@id/spin_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_every" />
        <Spinner android:layout_gravity="center" android:id="@id/spin_every" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0" />
        <TextView android:textAppearance="?android:textAppearanceMedium" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_at" />
        <TimePicker android:id="@id/pick_at" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <CheckBox android:gravity="center" android:id="@id/cb_minimal" android:padding="2.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/text_backup_update" android:layout_weight="1.0" />
