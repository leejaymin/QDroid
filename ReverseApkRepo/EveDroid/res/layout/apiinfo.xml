<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/layoutApi" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="20.0px" android:gravity="center" android:id="@id/lblUserId" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="User ID" />
    <EditText android:id="@id/txtUserId" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
    <TextView android:textSize="20.0px" android:gravity="center" android:id="@id/lblKey" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Api Key" />
    <EditText android:id="@id/txtKey" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" />
    <Button android:id="@id/btnSubmit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Submit" />
    <TextView android:textSize="12.0px" android:gravity="left" android:id="@id/lblKey" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="The button below will attempt to load the api information from the api.txt file on the sdcard, an empty one should have already been created for you. Example contents:\nuserid=123456\napikey=asdahgdlas....asdfas" />
    <Button android:id="@id/btnFromFile" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Load from api.txt file" />
</LinearLayout>
