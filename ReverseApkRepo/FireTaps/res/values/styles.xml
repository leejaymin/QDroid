<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainLayout">
        <item name="android:padding">@dimen/view_padding</item>
    </style>
    <style name="PageFlipper">
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:paddingTop">@dimen/view_padding</item>
        <item name="android:paddingBottom">@dimen/view_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:inAnimation">@anim/push_left_in</item>
        <item name="android:outAnimation">@anim/push_left_out</item>
    </style>
    <style name="FlippingPage">
        <item name="android:paddingRight">@dimen/view_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="HeadText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
    </style>
    <style name="LargeText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ParagraphText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SmallText">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NormalText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MediumText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ListHeader">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:background">@color/selected</item>
        <item name="android:paddingLeft">5.0px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextButton">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HelpButton" parent="@style/TextButton">
        <item name="android:layout_marginTop">@dimen/view_padding</item>
        <item name="android:layout_marginBottom">@dimen/view_padding</item>
    </style>
    <style name="FireButton">
        <item name="android:textSize">30.0px</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:background">@null</item>
        <item name="android:padding">5.0px</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SettingLabelBase">
        <item name="android:textSize">16.0px</item>
        <item name="android:textColor">@color/base</item>
    </style>
    <style name="SettingLabel" parent="@style/SettingLabelBase">
        <item name="android:textSize">16.0px</item>
        <item name="android:textColor">@color/base</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="SettingLabelMultiline" parent="@style/SettingLabelBase" />
    <style name="SettingLineLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SettingLineLabel" parent="@style/SettingLabelBase">
        <item name="android:layout_width">0.0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="SettingLineEditBase">
        <item name="android:textColor">@color/text_button</item>
        <item name="android:gravity">right|center</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minEms">3</item>
    </style>
    <style name="SettingLineDecimalEdit" parent="@style/SettingLineEditBase">
        <item name="android:numeric">decimal</item>
    </style>
    <style name="SettingLineIntegerEdit" parent="@style/SettingLineEditBase">
        <item name="android:numeric">integer</item>
    </style>
    <style name="SettingLineCheckbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SettingsLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:paddingTop">@dimen/view_padding</item>
        <item name="android:paddingRight">20.0px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="MenuLinearLayout">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minWidth">10000.0px</item>
    </style>
    <style name="MenuButton" parent="@style/TextButton">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:minHeight">60.0px</item>
    </style>
    <style name="MenuDividerImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/divider_horizontal_symmetric</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="ScrollView">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:cacheColorHint">@color/background</item>
    </style>
    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@drawable/divider_horizontal</item>
    </style>
    <style name="VolumeSeekBar">
        <item name="android:layout_width">200.0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">20</item>
    </style>
    <style name="RatingBarSmall">
        <item name="android:maxHeight">20.0px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small</item>
        <item name="android:minHeight">20.0px</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    <style name="RatingBarLarge">
        <item name="android:maxHeight">50.0px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_large</item>
        <item name="android:progressDrawable">@drawable/ratingbar_large</item>
        <item name="android:minHeight">50.0px</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    <style name="Theme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:panelFullBackground">@drawable/menu_full_background</item>
    </style>
</resources>
