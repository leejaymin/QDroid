<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_gravity="center" android:id="@id/clog_direction" android:padding="1.0px" android:layout_width="24.0px" android:layout_height="24.0px" android:scaleType="centerInside" />
    <LinearLayout android:orientation="vertical" android:paddingLeft="2.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="7.0">
        <TextView android:textSize="20.0px" android:textStyle="bold" android:id="@id/clog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@id/clog_peers" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:paddingLeft="2.0px" android:paddingRight="1.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="2.0">
        <TextView android:gravity="right" android:id="@id/clog_nbursts" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:gravity="right|center" android:id="@id/clog_duration" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:gravity="right" android:id="@id/clog_when" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="99.0" />
    </LinearLayout>
    <ImageView android:layout_gravity="center" android:id="@id/clog_delete" android:layout_width="24.0px" android:layout_height="24.0px" android:src="@drawable/icon_delete" android:scaleType="centerInside" />
</LinearLayout>
