<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/signin_layout" android:background="@drawable/wall_moon" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textStyle="bold" android:layout_gravity="center_horizontal" android:id="@id/signin_fleapapa" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
    <TableLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="right|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_user" />
            <EditText android:id="@id/signin_user" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minEms="10" android:maxLength="20" />
        </TableRow>
        <TableRow android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="right|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_pswd" />
            <EditText android:id="@id/signin_pswd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minEms="10" android:maxLength="32" />
        </TableRow>
        <TableRow android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="right|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_name" />
            <EditText android:id="@id/signin_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minEms="10" android:maxLength="32" />
        </TableRow>
        <TableRow android:orientation="horizontal" android:id="@id/signin_row_city" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="right|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_city" />
            <EditText android:id="@id/signin_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minEms="10" android:maxLength="32" />
        </TableRow>
        <TableRow android:orientation="horizontal" android:id="@id/signin_row_email" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="right|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_email" />
            <EditText android:id="@id/signin_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minEms="10" android:maxLength="80" />
        </TableRow>
        <TableRow android:orientation="horizontal" android:id="@id/signin_row_avatar" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_gravity="right|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_avatar" />
            <FrameLayout>
                <view android:id="@id/signin_avatar" android:layout_width="64.0px" android:layout_height="64.0px" android:src="@drawable/icon_wheel_orange" android:scaleType="centerInside" class="com.fleapapa.util.MyImageButton" />
            </FrameLayout>
        </TableRow>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
            <Button android:textSize="24.0px" android:gravity="center_horizontal" android:id="@id/signin_signin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_signin" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
            <Button android:textSize="24.0px" android:gravity="center_horizontal" android:id="@id/signin_skip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_skip" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
            <Button android:textSize="24.0px" android:gravity="center_horizontal" android:id="@id/signin_as_guest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_as_guest" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
            <Button android:textSize="24.0px" android:gravity="center_horizontal" android:id="@id/signin_signup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/signin_signup" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
        </LinearLayout>
    </TableLayout>
</FrameLayout>
