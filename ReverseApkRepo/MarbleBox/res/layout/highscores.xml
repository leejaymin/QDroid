            <Button android:id="@id/reset_hiscores" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/reset_hiscores" android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
