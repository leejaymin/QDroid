<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="#aa000000" android:layout_width="fill_parent" android:layout_height="fill_parent"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <TableLayout android:id="@id/scores_table" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="20.0dip" android:stretchColumns="1,2,3" />
        <LinearLayout android:orientation="vertical" android:id="@id/new_score" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20.0dip" android:textColor="#ffffffff" android:gravity="center" android:id="@id/your_score" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/your_score" />
            <TextView android:textSize="30.0dip" android:textColor="#ffffffff" android:gravity="center" android:id="@id/score_display" android:layout_width="fill_parent" android:layout_height="wrap_content" />
