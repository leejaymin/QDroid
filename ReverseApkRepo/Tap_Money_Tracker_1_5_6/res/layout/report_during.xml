        <EditText android:gravity="center_vertical" android:id="@id/edt_start" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Start Date" android:layout_weight="2.0" />
        <EditText android:id="@id/edt_end" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="End Date" android:layout_weight="2.0" />
