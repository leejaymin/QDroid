        <item name="itemTextColor">?itemForegroundColor</item>
        <item name="itemTextSecondaryColor">@drawable/list_view_text_dark</item>
        <item name="backgroundFunctionArea">@color/background_function_area_green</item>
        <item name="backgroundListArea">@color/background_list_area_green</item>
    </style>
    <style name="PMTTheme.Yellow" parent="@style/PMTTheme">
        <item name="itemForegroundColor">@drawable/list_view_text_black</item>
        <item name="itemBackgroundColor">@drawable/list_view_selector_yellow</item>
        <item name="itemParentBackgroundColor">@drawable/list_view_parent_selector_yellow</item>
        <item name="itemHeaderBackgroundColor">@color/background_list_header_yellow</item>
        <item name="itemBackgroundColor1">@color/background_list_item1_yellow</item>
