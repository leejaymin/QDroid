        <shape>
            <gradient android:startColor="@color/greymed" android:endColor="@color/greylight" android:angle="270.0" />
            <stroke android:width="3.0dip" android:color="@color/greylight" />
            <corners android:radius="3.0dip" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/greydark" android:endColor="@color/black" android:angle="270.0" />
            <stroke android:width="3.0dip" android:color="@color/greylight" />
            <corners android:radius="3.0dip" />
