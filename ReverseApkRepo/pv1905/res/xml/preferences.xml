        <CheckBoxPreference android:title="@string/save_thumbnail" android:key="SaveThumbnail" android:summary="@string/save_thumbnail_summary" android:defaultValue="false" />
        <com.rookiestudio.customize.IntListPreference android:title="@string/archive_file_behavior" android:key="OpenArchiveDo" android:defaultValue="0" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/bookshelf_setting" android:summary="">
        <CheckBoxPreference android:title="@string/incremental_scan" android:key="IncrementalScan" android:summary="@string/incremental_scan_summary" android:defaultValue="true" />
