        </PreferenceCategory>
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/pref_browse_navigate" android:summary="@string/pref_browse_navigate_summary">
        <com.rookiestudio.customize.IntListPreference android:title="@string/perf_reading_direction" android:key="OpenPageDirection" android:defaultValue="0" />
