        <com.rookiestudio.customize.IntListPreference android:title="@string/book_cover_smooth" android:key="BookCoverSmoothFilter" android:defaultValue="2" />
        <Preference android:title="@string/bookshelf_folder_management" android:key="BookshelfFolderManagement" android:summary="" android:defaultValue="" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/perf_touch_screen" android:summary="@string/perf_touch_screen_summary">
        <CheckBoxPreference android:title="@string/perf_fullscreen" android:key="UseFullScreen" android:summary="@string/perf_need_restart" android:defaultValue="true" />
        <com.rookiestudio.customize.IntListPreference android:title="@string/screen_orientation" android:key="ScreenOrientation" android:defaultValue="0" />
        <CheckBoxPreference android:title="@string/perf_touch_rotate" android:key="TouchRegionNoRotate" android:summary="@string/perf_touch_rotate_summary" android:defaultValue="false" />
