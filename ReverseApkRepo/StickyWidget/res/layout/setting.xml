<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText android:id="@id/sticky_contents_edit" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="" android:layout_weight="1.0" />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sticky_bgc" />
        <Spinner android:id="@id/color_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sticky_text_color" />
        <Spinner android:id="@id/text_color_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sticky_size" />
        <Spinner android:id="@id/size_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:id="@id/button_set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/button_set" />
        </TableRow>
    </TableLayout>
</LinearLayout>
