<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="@drawable/main_bg" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:background="@drawable/fx_sub_top_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="17.0dip" android:typeface="monospace" android:textStyle="bold" android:textColor="@android:color/white" android:id="@id/crop_text_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/main_crop_crop" android:layout_centerInParent="true" />"
</RelativeLayout>
        <RelativeLayout android:id="@id/pictureSpace" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageView android:id="@id/crop_picture" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true" />
            <com.jellybus.fx_sub.CropViewController android:id="@id/controller" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true" />
            <LinearLayout android:orientation="horizontal" android:id="@id/crop_sub_layout" android:background="@drawable/opacity_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                <ImageView android:id="@id/crop_ratio_free" android:background="@drawable/crop_crop_select_on" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/crop_crop_free" android:layout_weight="1.0" />
                <ImageView android:id="@id/crop_ratio_11" android:background="@drawable/crop_crop_select_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/crop_crop_11" android:layout_weight="1.0" />
                <ImageView android:id="@id/crop_ratio_23" android:background="@drawable/crop_crop_select_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/crop_crop_23" android:layout_weight="1.0" />
                <ImageView android:id="@id/crop_ratio_32" android:background="@drawable/crop_crop_select_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/crop_crop_32" android:layout_weight="1.0" />
                <ImageView android:id="@id/crop_ratio_34" android:background="@drawable/crop_crop_select_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/crop_crop_34" android:layout_weight="1.0" />
                <ImageView android:id="@id/crop_ratio_43" android:background="@drawable/crop_crop_select_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/crop_crop_43" android:layout_weight="1.0" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:background="@drawable/fx_sub_bottom_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/crop_button_cancel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/cancel_switch" android:layout_weight="1.0" android:onClick="crop_button_cancel_listener" />
            <ImageView android:layout_gravity="center_vertical" android:id="@id/crop_button_sub" android:background="@drawable/crop_crop_on" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/crop_crop_free" android:layout_weight="1.0" android:onClick="crop_button_sub_listener" />
            <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0" />
            <ImageView android:id="@id/crop_button_apply" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/apply_switch" android:layout_weight="1.0" android:onClick="crop_button_apply_listener" />
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@id/empty_view" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@android:color/black" />
    <TextView android:id="@id/empty_text_view" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" />
</RelativeLayout>
