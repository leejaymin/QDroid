<?xml version="1.0" encoding="utf-8"?>
<manifest android:versionCode="100" android:versionName="1.0" package="org.connectbot"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:label="@string/app_name" android:icon="@drawable/icon" android:description="@string/app_desc">
        <activity android:name=".HostList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".HostEditor" android:configChanges="keyboardHidden|orientation" />
        <activity android:name=".SettingsActivity" android:configChanges="keyboardHidden|orientation" />
        <activity android:name=".WizardActivity" android:configChanges="keyboardHidden|orientation" />
        <service android:name="org.connectbot.service.TerminalManager" android:configChanges="keyboardHidden|orientation" />
        <activity android:name="org.connectbot.Console" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="ssh" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
