<?xml version="1.0" encoding="utf-8"?>
<manifest android:versionCode="4" android:versionName="1.0.4" package="org.bpiette.app"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:label="@string/app_name" android:icon="@drawable/icon">
        <uses-library android:name="com.google.android.maps" />
        <activity android:label="@string/app_name" android:name=".ShanghaiTaxiMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/SelectLocation" android:name=".SelectLocationActivity">
            <intent-filter>
                <action android:name="org.bpiette.app.GET_LOCATION" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="3" />
</manifest>
